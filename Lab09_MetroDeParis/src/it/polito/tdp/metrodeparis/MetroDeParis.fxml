<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.metrodeparis.MetroDeParisController">
   <top>
      <Label text="Lab9_MetroParis" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../rsc/RATP.png" />
                     </image>
                  </ImageView>
                  <VBox prefHeight="100.0" prefWidth="238.0" spacing="5.0">
                     <children>
                        <Label text="Selezione una Stazione di Partenza :" />
                        <ComboBox fx:id="boxP" prefHeight="25.0" prefWidth="190.0" />
                        <Label text="Seleziona una Stazione di Arrivo :" />
                        <ComboBox fx:id="boxA" prefHeight="25.0" prefWidth="194.0" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#doCalcolaPercorso" text="Calcola Percorso" />
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <TextArea fx:id="txtResult" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
